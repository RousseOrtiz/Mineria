<div class="container p-4">
    <div class="row">

        {{#each links}}
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="card-title text-uppercase">
                            Encuesta {{id}}
                        </h3>
                        <p>{{timeago created_at}}</p>
                        <a href="/links/delete/{{id}}" class="btn btn-danger">Eliminar Encuesta</a>
                        <a href="/links/edit/{{id}}" class="btn btn-secondary">Ver Encuesta</a>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No has realizado la encuesta aún</p>
                    <a href="/links/add">Realizará ahora</a>
                </div>
            </div>
        {{/each}}
    </div>
</div>